                <input type="email" name="" id="email" class="form-control" placeholder="email@domain.com" aria-describedby="helpId">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="" id="password" class="form-control" placeholder="********" aria-describedby="helpId">
                
            </div>
            <div class="col-3">&nbsp;</div>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        <button type="button" id="btnSignUp" class="btn btn-success">Sign Up</button>
    </div>
</div>
